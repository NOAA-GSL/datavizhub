{
  "name": "datavizhub-dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "datavizhub",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "poetry install --no-root --with dev || true",
  "postStartCommand": "[ -f .devcontainer/.env ] || echo -e '# Auto-generated .env\\nDEBUG=False\\nLOG_LEVEL=info' > .devcontainer/.env; set -a && . .devcontainer/.env && set +a"
}

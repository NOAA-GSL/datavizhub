{
  "name": "zyra-dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "zyra",
  "workspaceFolder": "/app",
  "overrideCommand": false,

  // ✅ Ensures VS Code starts the right services
  "runServices": ["zyra", "redis"],
  "composeProfiles": ["dev"],

  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  // ✅ Forward API & Redis ports
  "forwardPorts": [8000, 6379],

  // ✅ Inject secrets cleanly
  "runArgs": ["--env-file", ".env"]
}
